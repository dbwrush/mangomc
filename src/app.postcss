@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@200;400;700&display=swap');

* {
    box-sizing: border-box;
}

html {
    --dark: rgb(5,4,5);
    --light: white;
    --bg: white;
    --fg: rgb(5,4,5);
}

@media (prefers-color-scheme: dark) {
    html {
        --bg: rgb(5,4,5);
        --fg: white;
    }
}

body {
    color-scheme: light dark;
    font-family: 'Lexend', Arial, Helvetica, sans-serif;
    margin: 0;
    background: var(--bg);
    color: var(--fg);
    height: 100vh;
}

button {
    display: block;
    font: inherit;
    text-align: inherit;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    color: inherit;
}

a {
    color: #8c9eff;
}

p {
    /* margin: 1rem 0; */
    margin: 0;
}

iframe {
    width: 100%;
    height: 500px;
    border: none;
    margin: 1rem 0;
}

code {
    font-family: "Mojang", monospace;
    font-size: 16px;
    letter-spacing: -0.5px;
}

.page-content img {
    max-width: 100%;
    border-radius: 4px;
    width: 100%;
    max-height: 500px;
    object-fit: contain;
}

@font-face {
    font-family: 'Mojang';
    src: url('/mojang-font/Mojang.woff2') format('woff2'),
        url('/mojang-font/Mojang.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Mojang';
    src: url('/mojang-font/Mojang-Bold.woff2') format('woff2'),
        url('/mojang-font/Mojang-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@keyframes background-move {
    from {
        background-position: 0%;
    }
    to {
        background-position: 400%;
    }
}

.header {
    background-image: linear-gradient(#ff8f00 40px, #e3cb84);
    text-align: center;
    color: var(--light);
    font-size: 1.8rem;
    padding-bottom: 1rem;
    overflow: hidden;
}

.header a {
    color: white;
    text-decoration: none;
}

