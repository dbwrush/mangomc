/* solid bg always */
.link-button:hover {
    background: #f22b2b85;
}
.link-button {
    border: 3px solid white;
    padding: 2px 8px;
    margin: 4px 8px;
    transition: 200ms background-color;
    display: inline-block;
    width: 80%;
    vertical-align: middle;
    background: #f22b2b36;
}

@media (min-width: 750px) {
    .link-button {
        width: 30%;
        max-width: 300px;
    }
}

.header h1 {
    font-size: 4rem;
    margin: 1rem;
    text-shadow: 0 0 50px #f22b2b;
}

.overlapping-button {
    position: relative;
    top: -1rem;
    color: var(--light);
    font-weight: bold;
    font-size: 1rem;
    width: -webkit-fit-content;
    width: -moz-fit-content;
    width: fit-content;
    margin: 0 auto;
    padding: 0.5rem 1rem;
    margin: 0 auto;
    display: block;
    background: #5865F2;
    border-radius: 10px;
    text-decoration: none;
    transition: transform 200ms;
}
.overlapping-button:hover {
    transform: translateY(2px);
    transition: transform 50ms;
}

.text-center {
    text-align: center;
}

.page-content {
    padding: 1rem;
    margin: 0 auto;
    max-width: 800px;
    border-top: 2px solid var(--fg);
}
.page-content.only-content {
    border: none;
}

.ribbon {
    display: block;
    background: #f4edae;
    height: 48px;
}

.ribbon-cover {
    /* background: linear-gradient(#ff8f75, rgb(238, 234, 234)); */
    padding: 48px 10px;
    color: var(--light);
    margin-top: -44px;
    background: linear-gradient(var(--dark), rgba(0,0,0,90%), var(--dark)), url('/textures/dirt.png');
    background-size: auto, auto;
    background-size: 48px;
}
.a-bg {
    background: var(--bg);
    color: var(--fg);
    background-size: 48px;
    min-height: 48px;
}

/* Server Info component */

.server-info {
    max-width: 500px;
    margin: 0 auto;
    font-family: "Mojang", monospace;
    font-size: 16px;
    letter-spacing: -0.5px;
    white-space: pre;
    word-spacing: 5px;
    white-space: pre-line;
    font-smooth: never;
    -webkit-font-smoothing: none;
    border: 2px solid rgba(255,255,255,50%);
    box-shadow: 0 0 8px rgba(255,255,255,50%);
    padding: 4px 6px;
    overflow: hidden;
}

.server-info-content {
    float: left;
    width: calc(100% - 74px);
}

.server-info-icon {
    display: block;
    float: left;
    margin: 6px 0;
    margin-right: 10px;
}

.server-info-content > span {
    display: block;
    margin: 6px 0;
}

.server-info_name {
    float: left;
}
.server-info_playercount {
    float: right;
}
.server-info_top-bar {
    overflow: hidden;
    display: block;
}

.server-info_status {
    color: #aaa;
    margin-left: 1rem;
}

select:hover {
    opacity: 1;
}
select {
    border: none;
    border-radius: 4px;
    background: var(--bg);
    color: var(--fg);
    position: fixed;
    bottom: 0;
    right: 0;
    opacity: 0;
}

.min-half-full {
    min-height: calc(100vh - 400px);
}